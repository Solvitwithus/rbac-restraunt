generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(uuid())
  name      String
 
  cp        String   @default("0_")

   roleId String
  role   Role @relation(fields: [roleId], references: [id], onDelete: Cascade)


  isActive  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  cp          String           @default("0_")

  users       User[]
  permissions Permission[]

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Permission {
   id       String   @id @default(uuid())
  name     String
  value    Boolean

  roleId   String
  role     Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Order {
  id        Int         @id @default(autoincrement())
  orderName String @unique
  status    String      @default("New")  // Added status field
  items     OrderItem[] @relation("OrderToItems")
  createdAt DateTime    @default(now())
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  order       Order    @relation("OrderToItems", fields: [orderId], references: [id])
  orderId     Int
  stock_id    String
  name        String
  description String
  price       Float
  units       String
  category_id String?
  createdAt   DateTime @default(now())
}

